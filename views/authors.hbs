<div class="content">
  <div class="row">
    <div class="col-md-offset-2 col-md-9">
      <table class="table">
        {{#authors}}
        <div class="container bookHolder">
          <div class="row">
            <div class="col-md-3  photoHolder">
              <a href="/authors/{{this.id}}"><img class="coverThumbnail" src="{{this.portrait_url}}" alt="{{this.first}}"/></a>
            </div>
            <div class="col-md-8">
              <h2>{{this.name}} {{this.last}}</h2>
              {{this.bio}}
            </div>
            <div class="col-md-1">
              <span class="editDelete glyphicon glyphicon-edit" aria-hidden="true"></span><br>
              <span class="editDelete glyphicon glyphicon-remove" aria-hidden="true"></span>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-8">
              <ul>
                {{#this.books}}
                <li>{{this.title}}</li>
                {{/this.books}}
              </ul>
            </div>
          </div>
        </div>
        {{/authors}}

      </table>
    </div>
  </div>
</div>

<a href="/authors/new"><div class="addAuthorButton">Create New Author</div></a>

<a href="/authors">
<div class="authorsBar">
  <div class="vertical-text">
    Authors
  </div>
</div>
</a>

<a href="/books">
<div class="booksBar ">
  <div class="vertical-text">
    Books
  </div>
</div>
</a>
