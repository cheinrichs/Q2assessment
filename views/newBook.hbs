<div class="content">
  <div class="row col-md-offset-2 col-md-9">
    Add a new book -
      <form role="form" class="form input-group" action="/authors/createNewAuthor" method="post">
        <label for="title">Title:</label>
        <input type="text" class="form-control" name="title" value="">
        <br>
        <label for="genre">Genre:</label>
        <input type="text" class="form-control" name="genre" value="">
        <br>
        <label for="coverImageUrl">Cover Image Url:</label>
        <input type="text" class="form-control" name="coverImageUrl" value="">
        <br>
        <label for="biography">Description:</label>
        <textarea rows=5 cols=7 type="text" class="form-control" name="biography" value=""></textarea>
        <br>
        Add an author:<br>
        <div class="authorsSelect">
          {{#authors}}
             <input type="checkbox" name="{{this.id}}" value="{{this.id}}">{{this.first}} {{this.last}}<br>
          {{/authors}}
        </div>

        <input type="submit" class="btn-primary" name="submit" value="Submit">
      </form>


      </form>
  </div>
</div>



