<div class="content">
  <div class="row">
    <div class="col-md-offset-2 col-md-9">
      {{#books}}
        <div class="row bookHolder">
          <div class="col-md-3  photoHolder">
            <a href="/books/{{this.id}}"><img class="coverThumbnail" src="{{this.cover_url}}" alt="{{this.title}}"/></a>
          </div>
          <div class="col-md-8">
            <h2><a href="/books/{{this.id}}">{{this.title}}</a></h2>
            by: {{this.authors}}<br>
            {{this.genre}}<br>
            {{this.description}}
          </div>
          <div class="col-md-1">
            <a href="/books/edit/{{this.id}}" alt="edit"><span class="editDelete glyphicon glyphicon-edit" aria-hidden="true"></span></a><br>
            <a href="/books/delete/{{this.id}}" alt="delete"><span class="editDelete glyphicon glyphicon-remove" aria-hidden="true"></span></a>
          </div>
        </div>
      {{/books}}
    </div>
  </div>
</div>

{{#if count}}
<div class="bookCount">
  Total Books: {{count.count}}
</div>
{{/if}}


<form class="" action="/books/results" method="post">
  <div class="form-group limit">
    <select class="form-control" name="limitDropdown" id="limitDropdown" onchange="this.form.submit()">
      <option value="1">1</option>
      <option value="5">5</option>
      <option value="10">10</option>
      <option value="100">100</option>
      <option value="Show All" selected>Limit Results...</option>
    </select>
  </div>
</form>

{{#if genres}}
<form class="" action="/books/genre" method="post">
  <div class="form-group genreSort">
    <select class="form-control" name="genreSort" id="genreSort" onchange="this.form.submit()">
      {{#genres}}
      <option value="{{this.genre}}">{{this.genre}}</option>
      {{/genres}}
      <option value="Show All" selected>Filter by genre...</option>
    </select>
  </div>
</form>
{{else}}
<a href="/books/"><div class="fullList">Back to full list</div></a>
{{/if}}

<a href="/books/new"><div class="addBookButton">Create New Book</div></a>

<a href="/authors">
<div class="authorsBar">
  <div class="vertical-text">
    Authors
  </div>
</div>
</a>

<a href="/books">
<div class="booksBar ">
  <div class="vertical-text">
    Books
  </div>
</div>
</a>
