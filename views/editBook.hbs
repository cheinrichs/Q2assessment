<div class="content">
  <div class="row col-md-offset-2 col-md-9">
    Editing {{book.book.title}} -
      <form role="form" class="form input-group" action="/books/submitEdits/{{book.book.id}}" method="post">
        <label for="title">Title:</label>
        <input type="text" class="form-control" name="title" value="{{book.book.title}}">
        <br>
        <label for="genre">Genre:</label>
        <input type="text" class="form-control" name="genre" value="{{book.book.genre}}">
        <br>
        <label for="coverImageUrl">Cover Image Url:</label>
        <input type="text" class="form-control" name="coverImageUrl" value="{{book.book.cover_url}}">
        <br>
        <label for="description">Description:</label>
        <textarea rows=5 cols=7 type="text" class="form-control" name="description">{{book.book.description}}</textarea>
        <br>
        <label>Add authors:</label>
        <div class="authorsSelect">
          {{#authors}}
             <input type="checkbox" class="authorCheckbox" name="{{this.id}}" value="{{this.id}}">{{this.first}} {{this.last}}<br>
          {{/authors}}
        </div>
        <input type="hidden" class="authorsChecked" name="authorsChecked" value="">

        <input type="submit" class="btn-primary" name="submit" value="Submit">
      </form>


      </form>
  </div>
</div>



<a href="/authors">
<div class="authorsBar">
  <div class="vertical-text">
    Authors
  </div>
</div>
</a>

